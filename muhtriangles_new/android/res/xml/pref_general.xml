        android:entryValues="@array/outlineThickness_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="gradientType"
        android:title="@string/gradientType"
        android:defaultValue="5"
        android:entries="@array/gradientType_titles"
        android:entryValues="@array/gradientType_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="gradientSubtle"
        android:title="@string/gradientSubtle"
        android:defaultValue="1"
        android:entries="@array/gradientSubtle_titles"
        android:entryValues="@array/gradientSubtle_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <SwitchPreference
        android:key="gradientMode"
        android:title="@string/gradientMode"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="gradientInvert"
        android:title="@string/gradientInvert"
        android:defaultValue="false" />

    <ListPreference
        android:key="speed"
        android:title="@string/speed"
        android:defaultValue="2"
        android:entries="@array/speed_titles"
        android:entryValues="@array/speed_values"
