<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="satMode"
        android:title="@string/satMode"
        android:defaultValue="6"
        android:entries="@array/satMode_titles"
        android:entryValues="@array/satMode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="hueMode"
        android:title="@string/hueMode"
        android:defaultValue="c0"
        android:entries="@array/hueMode_titles"
        android:entryValues="@array/hueMode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="lumaMode"
