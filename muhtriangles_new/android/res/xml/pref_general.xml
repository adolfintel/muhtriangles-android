        android:entries="@array/lumaMode_titles"
        android:entryValues="@array/lumaMode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <SwitchPreference
        android:key="outlineOnOff"
        android:title="@string/outlineOnOff"
        android:defaultValue="true"
        />

    <ListPreference
        android:key="outline"
        android:title="@string/outline"
        android:defaultValue="2"
        android:entries="@array/outline_titles"
        android:entryValues="@array/outline_values"
